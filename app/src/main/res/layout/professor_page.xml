<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="right"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="353dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="221dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/professor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Matthew Hertz"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:textSize="18sp" />

                    <TextView
                        android:id="@+id/professor_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7.0/10.0"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/professor_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CSE442"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="86dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/user_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter name here (displayed on comment)"
                    android:inputType="textMultiLine"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/user_rating_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter rating here (Example: 5.0/10)"
                    android:inputType="textMultiLine"
                    android:textSize="15sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <EditText
            android:id="@+id/commentBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:ems="10"
            android:gravity="top"
            android:hint="Leave a comment"
            android:inputType="textMultiLine"
            android:lines="6"
            android:textColorLink="@color/colorPrimary" />

        <Button
            android:id="@+id/submit"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit" />

        <LinearLayout
            android:id="@+id/user_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="203dp">

            <LinearLayout
                android:id="@+id/user_comment_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="353dp">

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:id="@+id/user_comment_nrd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/users_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dominic DiStefano"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/users_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7.0/10.0"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="09/25/18"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/users_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="6"
                android:text="Good material, decent jokes, awful shirts. Also let a TA in that has never taken the class before... awkward." />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>